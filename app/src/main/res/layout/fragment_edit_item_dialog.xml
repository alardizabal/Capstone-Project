<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:orientation="vertical">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:background="@color/colorPrimary"
		android:contentDescription="@string/app_name"
		android:scaleType="center"
		android:src="@mipmap/ic_launcher"/>

	<EditText
		android:id="@+id/dialog_item_title"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginStart="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginLeft="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginEnd="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginTop="20dp"
		android:hint="@string/dialog_item_title_hint"
		android:inputType="text"/>

	<EditText
		android:id="@+id/dialog_item_subtitle"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginStart="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginLeft="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginEnd="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginTop="12dp"
		android:fontFamily="sans-serif"
		android:hint="@string/dialog_item_subtitle_hint"
		android:inputType="text"/>

	<EditText
		android:id="@+id/dialog_item_quantity"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginStart="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginLeft="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginEnd="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_horizontal_margin"
		android:layout_marginTop="12dp"
		android:fontFamily="sans-serif"
		android:hint="@string/dialog_item_quantity_hint"
		android:inputType="text"/>
</LinearLayout>